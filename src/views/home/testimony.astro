const firstRow = reviews.slice(0, reviews.length / 2);
const secondRow = reviews.slice(reviews.length / 2);
---

<section class="py-10">
  <div class="mx-auto max-w-7xl px-4 md:px-6">
    <div class="flex flex-col items-center justify-center gap-4">
      <h2 class="text-3xl font-bold text-gray-100">Apa kata teman-teman?</h2>
      <p class="text-gray-400">
        Teman-teman bakalan mendapatkan benefit yang banyak ketika bergabung
        bersama komunitas Minang IT Camp
      </p>
    </div>
  </div>

  <div
    class="relative flex w-full flex-col items-center justify-center overflow-hidden mt-10"
  >
    <Marquee client:load pauseOnHover className="[--duration:20s]">
      {firstRow.map((review) => <ReviewCard client:load {...review} />)}
    </Marquee>
    <Marquee client:load reverse pauseOnHover className="[--duration:20s]">
      {secondRow.map((review) => <ReviewCard client:load {...review} />)}
    </Marquee>
