---
import { cn } from "~/lib/utils";

const { title, description } = Astro.props;
---

<div
  class="border border-gray-800 relative shadow-[0px_4px_0px_0px_rgba(255,255,255,0.5)] rounded-xl bg-gray-800/50"
>
  <div class={cn("text-start p-4 md:p-6")}>
    <h3 class="text-xl mb-2 font-bold text-gray-100">
      {title}
    </h3>

    <p class="text-gray-300">{description}</p>
  </div>
</div>
