---
import { Button } from "~/components/ui/button";
import MobileNav from "./partials/mobile-nav";

const navbarLinks = [
  { href: "/", label: "Beranda" },
  { href: "#", label: "Tentang" },
  { href: "#", label: "Blog" },
  { href: "#", label: "Acara" },
];
---

<nav
  class="bg-gray-900/80 backdrop-blur-md fixed w-full z-50 transition-all duration-300 border-b border-gray-700"
>
  <div class="mx-auto max-w-7xl h-[4rem] px-4 md:px-6">
    <div class="flex h-full items-center justify-between">
      <div class="flex items-center">
        <h2
          class="text-white font-bold text-xl md:text-2xl hover:text-red-500 transition-colors"
        >
          <a href="/">Minang IT Camp</a>
        </h2>
      </div>

      <div class="hidden md:flex items-center gap-4 md:gap-6">
        {
          navbarLinks.map((link) => (
            <a
              href={link.href}
              class="text-white text-base hover:text-red-500 transition-colors"
            >
              {link.label}
            </a>
          ))
        }
      </div>

      <div class="hidden md:block">
        <Button className="bg-gray-800 border border-gray-700">
          Hubungi Kami
        </Button>
      </div>

      <MobileNav client:load menus={navbarLinks} />
    </div>
  </div>
</nav>
