---
const navbarLinks = [
  { href: "/", label: "Home" },
  { href: "/about", label: "About" },
  { href: "/contact", label: "Contact" },
  { href: "/blog", label: "Blog" },
  { href: "/event", label: "Event" },
];
---

<nav
  class="bg-gray-900/80 backdrop-blur-md fixed w-full z-50 transition-all duration-300 border-b border-gray-700"
>
  <div class="mx-auto max-w-7xl h-[4rem] px-4 md:px-6">
    <div class="flex h-full items-center justify-between">
      <div class="flex items-center">
        <h2
          class="text-white font-bold text-xl md:text-2xl hover:text-red-500 transition-colors"
        >
          Minang IT Camp
        </h2>
      </div>

      <div class="flex items-center gap-4 md:gap-6">
        {
          navbarLinks.map((link) => (
            <a
              href={link.href}
              class="text-white text-md md:text-lg hover:text-red-500 transition-colors"
            >
              {link.label}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</nav>
